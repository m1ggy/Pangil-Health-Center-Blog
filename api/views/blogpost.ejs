   <script>
       const table = document.querySelector('.table')
       
       const articles = <%-JSON.stringify(articles)%>

       if(articles.length>0){
         let i = 0;   
          while(articles.length>i){
            const h1 = document.createElement('h1')
            const h3 = document.createElement('h3')     
            const jumbotron = document.createElement('div')
            const button = document.createElement('a')
            jumbotron.className = 'col-lg-4 col-md-6'
            h1.style.fontFamily ="alegreya"
            h1.className ='font-italic mt-5'
            button.className ='btn btn-success mt-3 mb-2'
            button.innerHTML ="Read"
            h1.style.fontSize = '60px';
            h3.style.margin ="10px"
            h3.style.fontFamily ='Roboto'
            
              title = document.createTextNode(articles[i].title)
              author = document.createTextNode(articles[i].author.toLowerCase())
            button.href = `blog/post/${i+1}`
              h1.appendChild(title)
              jumbotron.appendChild(h1)
              h3.appendChild(author)
              jumbotron.appendChild(h3)
              jumbotron.appendChild(button)
              table.appendChild(jumbotron)
              i++
            }  
        
       }

   </script>

