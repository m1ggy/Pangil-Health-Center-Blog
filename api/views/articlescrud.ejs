    <script>
        const bodyArticles = document.querySelector('#bodyArticles')
    const articles = <%- JSON.stringify(articles) %>
    

    articles.forEach((element) => {
        const td = document.createElement('td')
        const td1 = document.createElement('td')
        const td2 = document.createElement('td')
        const td3 = document.createElement('td')
        const tr = document.createElement('tr')
        const table = document.querySelector('.table')
        const button = document.createElement('a')
        button.className = 'btn btn-primary text-light'
        button.textContent = 'Edit'
        button.href = `/dashboard/viewarticles/${element.postID}`
        const postID = document.createTextNode(element.postID)
        const title = document.createTextNode(element.title)
        const author = document.createTextNode(element.author)

        td.appendChild(postID)
        tr.appendChild(td)
        td1.appendChild(title)
        tr.appendChild(td1)
        td2.appendChild(author)
        tr.appendChild(td2)
        td3.appendChild(button)
        tr.appendChild(td3)
        table.appendChild(tr)        
    });

